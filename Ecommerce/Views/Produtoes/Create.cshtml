@model Ecommerce.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DscProduto" class="control-label"></label>
                <input asp-for="DscProduto" class="form-control" />
                <span asp-validation-for="DscProduto" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="VlrUnitario" class="control-label"></label>
                <input asp-for="VlrUnitario" class="form-control" />
                <span asp-validation-for="VlrUnitario" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" /> |
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
